<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

    <TableRow>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:height="300dp"
            android:background="#FFFFFF"
            android:gravity="bottom"
            android:text="NULL"
            android:textSize="50dp"></TextView>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/but1"
            android:text="1"
            android:layout_weight="1"
            android:onClick="click"
            android:layout_height="80dp"

            ></Button>
        <Button
            android:id="@+id/but2"
            android:text="2"
            android:layout_weight="1"
            android:onClick="click"
            android:layout_height="80dp"
            ></Button>
        <Button
            android:id="@+id/but3"
            android:text="3"
            android:layout_weight="1"
            android:onClick="click"
            android:layout_height="80dp"
            ></Button>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/but4"
            android:text="4"
            android:layout_weight="1"
            android:onClick="click"
            android:layout_height="80dp"
            ></Button>
        <Button
            android:id="@+id/but5"
            android:text="5"
            android:layout_weight="1"
            android:onClick="click"
            android:layout_height="80dp"
            ></Button>
        <Button
            android:id="@+id/but6"
            android:text="6"
            android:layout_weight="1"
            android:onClick="click"
            android:layout_height="80dp"
            ></Button>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/but7"
            android:text="7"
            android:layout_weight="1"
            android:onClick="click"
            android:layout_height="80dp"
            ></Button>
        <Button
            android:id="@+id/but8"
            android:text="8"
            android:layout_weight="1"
            android:onClick="click"
            android:layout_height="80dp"
            ></Button>
        <Button
            android:id="@+id/but9"
            android:text="9"
            android:layout_weight="1"
            android:onClick="click"
            android:layout_height="80dp"
            ></Button>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/but_c"
            android:text="c"
            android:layout_weight="1"
            android:onClick="clear"
            android:layout_height="80dp"
            ></Button>
        <Button
            android:id="@+id/but0"
            android:text="0"
            android:layout_weight="1"
            android:onClick="click"
            android:layout_height="80dp"
            ></Button>
        <Button
            android:id="@+id/but_equ"
            android:text="="
            android:layout_weight="1"
            android:onClick="equ"
            android:layout_height="80dp"
            ></Button>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/but_jia"
            android:text="+"
            android:layout_weight="1"
            android:onClick="click"
            android:layout_height="80dp"
            ></Button>
        <Button
            android:id="@+id/but_jian"
            android:text="-"
            android:layout_weight="1"
            android:onClick="click"
            android:layout_height="80dp"
            ></Button>
        <Button
            android:id="@+id/but_cheng"
            android:text="*"
            android:layout_weight="1"
            android:onClick="click"
            android:layout_height="80dp"
            ></Button>
        <Button
            android:id="@+id/but_chu"
            android:text="/"
            android:layout_weight="1"
            android:onClick="click"
            android:layout_height="80dp"
            ></Button>

    </TableRow>



</TableLayout>